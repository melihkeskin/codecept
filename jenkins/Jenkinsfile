 pipeline {
   agent any

   tools {
     nodejs "build-default"
   }

   stages {
     stage("Initializing") {
       steps {
         echo 'Initializing step'
         sh 'npm install'
         script {
           def test = 2 + 2 > 3 ? 'cool' : 'not cool'
           echo test
         }
       }
     }

     stage("Running Tests") {
       steps {
         echo 'Running step'
         sh 'npx codeceptjs run --steps'
       }
     }
   }

 }