 pipelin{
    agent any

    stage("Initializing") {
            steps { 
                sh 'npm install'
                sh 'npm build'
            }
    }
 
    stage("Running Tests") {
         steps {
            try {
              sh 'npx codeceptjs run --steps'
            }
            finally {
                sh "ls report/"
                allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
                echo 'Running Tests finally'
            }
         }
    }

 }